                    "group": "6_remove@2"
                },
                {
                    "command": "favorites.alias.remove",
                    "when": "viewItem == FAVORITE_FILE || viewItem == FAVORITE_DIRECTORY",
                    "group": "6_remove@3"
                },
                {
                    "command": "favorites.deleteFavorite",
                    "when": "viewItem == FAVORITE_FILE || viewItem == FAVORITE_DIRECTORY || viewItem == FAVORITE_URL",
                    "group": "7_delete"
                }
