                    "group": "1_modification"
                },
                {
                    "command": "favorites.add.url.clipboard",
                    "when": "view == favoritesActivity && viewItem == FAVORITE_GROUP",
                    "group": "1_modification"
                },
                {
                    "command": "favorites.open.url",
