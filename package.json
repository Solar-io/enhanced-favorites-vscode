                },
                {
                    "command": "favorites.copy.name",
                    "when": "viewItem == FAVORITE_DIRECTORY",
                    "group": "8_copyNameOrPath"
                },
                {
                    "command": "favorites.copy.name",
                    "when": "viewItem == FS_DIRECTORY",
                    "group": "8_copyNameOrPath"
                },
                {
                    "command": "favorites.add.url",
                    "when": "view == favorites && viewItem == FAVORITE_GROUP",
                    "group": "1_modification"
                },
                {
                    "command": "favorites.add.url",
