{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "./out",
        "moduleResolution": "node",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "skipLibCheck": true,
        "lib": [
            "ES2020"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "out",
        "dist",
        "webpack.config.js"
    ]
}
